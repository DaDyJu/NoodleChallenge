<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Time remaining" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player_two_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 Score: " />

        <TextView
            android:id="@+id/player_three_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 Score: " />

        <TextView
            android:id="@+id/player_four_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 3 Score: " />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/noodle_bowl"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/noods_full" />

        <ImageView
            android:id="@+id/chopstick_down"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-40dp"
            android:src="@drawable/chopstick_down" />

        <ImageView
            android:id="@+id/chopstick_up"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-60dp"
            android:src="@drawable/chopstick_up" />

        <ImageView
            android:id="@+id/noodle_powerup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/shaking_icon" />
    </FrameLayout>
</RelativeLayout>