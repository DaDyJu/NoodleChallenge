<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#5f679c">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Time remaining" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_two_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1 Score: " />

            <TextView
                android:id="@+id/player_three_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2 Score: " />

            <TextView
                android:id="@+id/player_four_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 3 Score: " />
        </LinearLayout>

        <TextView
            android:id="@+id/player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="60sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/noodle_bowl"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/noods_01" />

            <ImageView
                android:id="@+id/chopstick_down"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-40dp"
                android:src="@drawable/chopstick_down" />

            <ImageView
                android:id="@+id/chopstick_up"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/chopstick_up"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/powerup_send_noodle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/powerup_sendnoods" />

                <ImageView
                    android:id="@+id/powerup_send_vibrate"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/powerup_vibrate" />
            </LinearLayout>


        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/finished_bowl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:orientation="vertical">

    </LinearLayout>

    <include
        android:id="@+id/send_noods_layout"
        layout="@layout/send_noods"
        android:visibility="gone" />

    <com.kkadadeepju.snwf.sendnoodswithfriends.widget.SolidRedShadowTextView
        android:id="@+id/starting_text"
        android:textSize="100sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO!"/>
</FrameLayout>
